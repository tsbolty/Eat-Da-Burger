<h1>Burgers</h1>

<ul>
    {{#each burgers}}
    <li>
        <p>{{this.name}}</p>
        <button id= {{this.id}}>Devour</button>
    </li>
    {{/each}}
</ul>

<p>Add a burger:</p>
<form action="/" method="POST">
	<textarea type="text" name="burger"></textarea>

	<button type="submit">Submit</button>
</form>